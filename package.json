{
  "name": "faasjs-mono",
  "version": "0.0.2-beta.349",
  "scripts": {
    "lint": "eslint --ext .js,.ts,.tsx .",
    "test": "jest --silent --ci --coverage --forceExit --detectOpenHandles",
    "pub": "node publish.js",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/coverage packages/*/*.log tmp *.log",
    "build": "node build.js",
    "build:types": "node build-types.js"
  },
  "devDependencies": {
    "@faasjs/eslint-config-recommended": "file:./packages/eslint-config-recommended",
    "@faasjs/eslint-config-react": "file:./packages/eslint-config-react",
    "faasjs": "file:./packages/faasjs"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/examples",
      "**/lib",
      "**/dist",
      "**/tmp"
    ],
    "extends": [
      "@faasjs/recommended",
      "@faasjs/react"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "transform": {
      ".(jsx|tsx?)": "@swc/jest"
    },
    "verbose": false,
    "testPathIgnorePatterns": [
      "/lib/",
      "/tmp/",
      "/examples/",
      "/benchmarks/"
    ],
    "collectCoverageFrom": [
      "**/packages/**/*.ts",
      "**/packages/**/*.tsx",
      "!**/local/**"
    ],
    "testRegex": "/*\\.test\\.tsx?$",
    "coveragePathIgnorePatterns": [
      "/lib/",
      "/dist/",
      "/tmp/",
      "/__tests__/",
      "/examples/",
      "!*.d.ts"
    ],
    "moduleNameMapper": {
      "@faasjs/(.*)": "<rootDir>/packages/$1"
    },
    "setupFiles": [
      "./packages/test/src/jest.setup"
    ],
    "setupFilesAfterEnv": [
      "./packages/ant-design/src/__tests__/jest.setup"
    ]
  }
}
