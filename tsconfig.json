    "declaration": true,
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "target": "ES2019",
    "module": "ESNext",
    "baseUrl": ".",
