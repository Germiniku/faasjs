{
  "name": "@faasjs/cli",
  "version": "0.0.1-beta.4",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "faas": "lib/index.js"
  },
  "scripts": {
    "lint": "eslint --ext .ts src",
    "prepack": "rm -rf ./lib && rollup -c",
    "ci": "yarn lint && jest"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "@faasjs/deployer": "beta",
    "@faasjs/func": "beta",
    "@faasjs/server": "beta",
    "@faasjs/test": "beta",
    "@types/glob": "*",
    "commander": "*",
    "enquirer": "*",
    "ts-node": "*"
  },
  "devDependencies": {
    "@faasjs/eslint-config-recommended": "beta"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "compact": false
  },
  "eslintConfig": {
    "extends": [
      "@faasjs/recommended"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "testRegex": "/*\\.test\\.ts$",
    "testPathIgnorePatterns": [
      "/lib/"
    ],
    "coveragePathIgnorePatterns": [
      "/lib/",
      "/tmp/",
      "/__tests__/"
    ]
  }
}
