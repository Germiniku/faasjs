{
  "name": "faasjs-mono",
  "version": "0.0.2-beta",
  "scripts": {
    "lint": "eslint --ext .js,.ts,.tsx .",
    "test": "node --expose-gc ./node_modules/.bin/jest --silent --ci --coverage --forceExit --logHeapUsage -w=1",
    "pub": "lerna publish && node tag.js",
    "pub:retry": "lerna publish from-git",
    "clean": "rm -rf packages/*/node_modules packages/*/lib packages/*/.rpt2_cache packages/*/coverage packages/*/*.log tmp *.log",
    "build": "lerna run build --stream --parallel"
  },
  "devDependencies": {
    "@types/debug": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "@faasjs/eslint-config-recommended": "file:./packages/eslint-config-recommended",
    "@swc/jest": "*",
    "faasjs": "file:./packages/faasjs",
    "jest": "*",
    "lerna": "*",
    "@lerna/package": "https://gitpkg.now.sh/zfben/lerna/core/package?c83f02e",
    "@lerna/package-graph": "https://gitpkg.now.sh/zfben/lerna/core/package-graph?c83f02e",
    "@lerna/validation-error": "https://gitpkg.now.sh/zfben/lerna/core/validation-error?c83f02e",
    "@lerna/prerelease-id-from-version": "https://gitpkg.now.sh/zfben/lerna/utils/prerelease-id-from-version?c83f02e",
    "rollup": "*",
    "typescript": "*",
    "regenerator-runtime": "*",
    "@testing-library/jest-dom": "*",
    "@testing-library/react": "*"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/examples",
      "**/lib",
      "**/tmp"
    ],
    "extends": [
      "@faasjs/recommended"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "transform": {
      ".(jsx|tsx?)": "@swc/jest"
    },
    "verbose": false,
    "testPathIgnorePatterns": [
      "/lib/",
      "/tmp/",
      "/examples/",
      "/benchmarks/"
    ],
    "collectCoverageFrom": [
      "**/packages/**/*.ts",
      "**/packages/**/*.tsx",
      "!**/local/**"
    ],
    "testRegex": "/*\\.test\\.tsx?$",
    "coveragePathIgnorePatterns": [
      "/lib/",
      "/tmp/",
      "/__tests__/",
      "/examples/"
    ],
    "moduleNameMapper": {
      "@faasjs/(.*)": "<rootDir>/./packages/$1/src"
    },
    "setupFiles": [
      "./packages/test/src/jest.setup"
    ]
  }
}
