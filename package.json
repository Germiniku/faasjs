{
  "name": "faasjs",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .ts packages/*/src",
    "test": "lerna bootstrap && yarn lint && yarn jest --silent",
    "pub": "lerna publish --preid beta --pre-dist-tag beta",
    "clean": "rm -rf packages/*/node_modules packages/*/lib packages/*/.rpt2_cache packages/*/coverage tmp",
    "build": "lerna run prepack --stream"
  },
  "devDependencies": {
    "@faasjs/eslint-config-recommended": "./packages/eslint-config-recommended",
    "@zerollup/ts-transform-paths": "*",
    "jest": "*",
    "lerna": "*",
    "ts-jest": "*",
    "typescript": "*"
  },
  "workspaces": [
    "packages/*"
  ]
}
