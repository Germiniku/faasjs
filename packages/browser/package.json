{
  "name": "@faasjs/browser",
  "version": "0.0.0-alpha.10",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint --ext .ts --fix src",
    "build": "rm -rf ./lib && rollup -c",
    "test": "jest --expand",
    "ci": "yarn lint && yarn test",
    "commit": "yarn ci && yarn build"
  },
  "files": [
    "lib"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "*",
    "@babel/preset-env": "*",
    "@babel/preset-typescript": "*",
    "@faasjs/eslint-config-recommended": "beta",
    "@types/debug": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "babel-jest": "*",
    "jest": "*",
    "rollup": "*",
    "rollup-plugin-typescript2": "*",
    "typescript": "*"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "@faasjs/recommended"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "testRegex": "/*\\.test\\.ts$",
    "testPathIgnorePatterns": [
      "/lib/"
    ],
    "coveragePathIgnorePatterns": [
      "/lib/",
      "/tmp/",
      "/__tests__/"
    ]
  }
}
