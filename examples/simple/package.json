{
  "name": "simple",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .ts .",
    "test": "yarn && jest --silent --maxWorkers=1"
  },
  "dependencies": {
    "faasjs": "beta",
    "@faasjs/eslint-config-recommended": "beta"
  },
  "eslintConfig": {
    "extends": [
      "@faasjs/recommended"
    ]
  },
  "eslintIgnore": [
    "tmp"
  ],
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "testRegex": "/*\\.test\\.ts$",
    "modulePathIgnorePatterns": [
      "/lib/",
      "/tmp/"
    ]
  }
}
