{
  "name": "faasjs-mono",
  "version": "0.0.2-beta.321",
  "scripts": {
    "lint": "eslint --ext .js,.ts,.tsx .",
    "test": "node --expose-gc ./node_modules/.bin/jest --silent --ci --coverage --forceExit --logHeapUsage -w=1",
    "pub": "node publish.js",
    "clean": "rm -rf packages/*/node_modules packages/*/lib packages/*/.rpt2_cache packages/*/coverage packages/*/*.log tmp *.log",
    "build": "npm run build --ws --if-present"
  },
  "devDependencies": {
    "@types/debug": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "@faasjs/eslint-config-recommended": "file:./packages/eslint-config-recommended",
    "@swc/jest": "*",
    "faasjs": "file:./packages/faasjs",
    "jest": "*",
    "typescript": "*",
    "regenerator-runtime": "*"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/examples",
      "**/lib",
      "**/tmp"
    ],
    "extends": [
      "@faasjs/recommended"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "transform": {
      ".(jsx|tsx?)": "@swc/jest"
    },
    "verbose": false,
    "testPathIgnorePatterns": [
      "/lib/",
      "/tmp/",
      "/examples/",
      "/benchmarks/"
    ],
    "collectCoverageFrom": [
      "**/packages/**/*.ts",
      "**/packages/**/*.tsx",
      "!**/local/**"
    ],
    "testRegex": "/*\\.test\\.tsx?$",
    "coveragePathIgnorePatterns": [
      "/lib/",
      "/tmp/",
      "/__tests__/",
      "/examples/"
    ],
    "moduleNameMapper": {
      "@faasjs/(.*)": "<rootDir>/packages/$1"
    },
    "setupFiles": [
      "./packages/test/src/jest.setup"
    ]
  }
}
